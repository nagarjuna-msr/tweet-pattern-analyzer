# Cache headers for Render static site
# Prevent index.html caching (always fetch fresh)
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Cache JS/CSS assets forever (Vite adds hashes)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

